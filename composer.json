{
    "name": "district09/qa-php",
    "description": "Quality Assurance tools and configuration for PHP projects and packages.",
    "keywords": [
        "district09",
        "qa",
        "php"
    ],
    "type": "library",
    "homepage": "https://github.com/digipolisgent/php_package_qa-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Matthijs Van Assche",
            "email": "matthijs.vanassche@district09.gent",
            "role": "developer"
        },
        {
            "name": "Maarten Segers",
            "email": "maarten.segers@district09.gent",
            "role": "developer"
        },
        {
            "name": "Peter Decuyper",
            "email": "peter.decuyper@district09.gent",
            "role": "developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpro/grumphp-shim": true
        }
    },
    "autoload": {
        "psr-4": {
            "District09\\QA\\PHP\\": "src/"
        }
    },
    "require": {
        "php": "^7.4|^8.0",
        "enlightn/security-checker": "^1.4",
        "ergebnis/composer-normalize": "^2.8",
        "nette/neon": "^3.2",
        "phpmd/phpmd": "^2.11",
        "phpro/grumphp-shim": "^1.1",
        "phpspec/prophecy": "^1.10",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.5.6",
        "sebastian/phpcpd": "^6.0",
        "symfony/filesystem": "^5.2"
    }
}
